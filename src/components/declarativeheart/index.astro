<!-- Wrap the component elements in our custom element “astro-heart”. -->
<astro-heart>
  <template shadowrootmode="open">
    <button aria-label="Heart">💜</button> × <span>0</span>
    <script>
      let count = 0;

      const el = document.querySelector("astro-heart");
      const shadowRoot = el.shadowRoot;
      const heartButton = shadowRoot.querySelector("button");
      const countSpan = shadowRoot.querySelector("span");

      // ボタンがクリックされるたびにカウントを更新する
      heartButton.addEventListener("click", () => {
        count++;
        countSpan.textContent = count.toString();
      });
    </script>
  </template>
</astro-heart>
