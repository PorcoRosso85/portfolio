---
const baseUrl = import.meta.env.BASE_URL
const page = {
    div1: `${baseUrl}/contentslist/components/div1`,
    div2: `${baseUrl}/contentslist/components/div2`
}
---
<body>

	<!-- ヘッダー -->
	<header id="global-header">
		<!-- ナビゲーション -->
		<nav>
			<ul>
				<li><a href="#">home</a></li>
				<li><a href="#">articles</a></li>
				<li><a href="#">contacts</a></li>
			</ul>
		</nav>
	</header>

	<!-- メインコンテンツとサイドバー -->
	<div id="layout-container">
		<!-- サイドバー -->
		<aside id="sidebar">
			<h3>Links</h3>
            <ul id="button-list">
				<li><button hx-target="#main-content" hx-get=`${page.div1}` hx-swap="innerHTML">div1</a></button>
				<li><button hx-target="#main-content" hx-get=`${page.div2}` hx-swap="innerHTML">div2</a></button>
				<!-- <button hx-get=`${page.div1}` hx-swap="outerHTML">div1</button> <div /> -->
			</ul>
		</aside>

		<!-- メインコンテンツ -->
		<main id="main-content">
			<h3>Main</h3>
			<slot></slot>
		</main>
	</div>

	<!-- フッター -->
	<footer id="global-footer">
		<p>Copyright 2023 by Por85.</p>
	</footer>

</body>

<style>
	#global-header {
		background-color: #f4f4f4;
		padding: 1em;
	}
	nav ul {
		list-style: none;
	}
	nav ul li {
		display: inline;
		margin-right: 10px;
	}

	/* サイドバー */
	#sidebar {
		background-color: #e9e9e9;
		padding: 1em;
		width: 200px;
		float: left;
	}

    /* リスト全体のスタイル */
    #button-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: space-around;
    }

    /* 各リスト項目のスタイル */
    #button-list li {
        background-color: #2c2c2c;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        border-radius: 4px;
        text-align: center;
    }

    /* ホバー時のスタイル */
    #button-list li:hover {
        background-color: #6b6b6b;
    }

	/* メインコンテンツ */
	#main-content {
		margin-left: 210px;
		padding: 1em;
	}

	/* フッター */
	#global-footer {
		background-color: #f4f4f4;
		padding: 1em;
		clear: both;
	}
</style>